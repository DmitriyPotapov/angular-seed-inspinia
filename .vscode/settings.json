// Place your settings in this file to overwrite default and user settings.
{
  "typescript.tsdk": "node_modules/typescript/lib",
  "search.exclude": {
    "**/coverage_js": true,
    "**/coverage": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/for-porting": true
  },
  "tslint.autoFixOnSave": true,
  "tslint.exclude": [
    "./dist/**",
    "./src/client/css/**"
